 <view>
    <van-dropdown-menu active-color="#1989fa" :color="red">
        <van-dropdown-item value="{{ course_value }}" options="{{ course_type }}" bind:change="courseTypeSelected"/>
        <van-dropdown-item value="{{ department_value }}" options="{{ department_type }}" bind:change="departmentTypeSelected"/>
        <van-dropdown-item value="{{ rank_value }}" options="{{ rank_type }}" bind:change="rankTypeSelected"/>
    </van-dropdown-menu>

    <view wx:for="{{ courses_list }}" wx:key="id">
        <van-card
        tag="{{ item.tag }}"
        desc="主讲教师: {{ item.teacher }}"
        title="{{ item.name }}"
        thumb="{{ image_url }}"
        thumb-mode="aspectFill"
        thumb-link="../course_item/course_item"
        >
            <view slot="tags">
                <van-tag plain type="primary">{{ item.department }}</van-tag>
                <van-tag plain color="{{ item.color }}">{{ item.type }}</van-tag>
            </view>
            <star slot="price">
                <van-rate allow-half void-color="#eee" void-icon="star" readonly value="{{ item.star }}" />
            </star>
            <view slot="num" class="rate">
                {{ func.toFixed(item.score) }}
            </view>
            <view slot="footer">
                <van-button size="mini">详情</van-button>
            </view>
            <wxs module="func">
                var toFixed = function(value) {
                    return value.toFixed(1);
                }
                module.exports = {
                    toFixed: toFixed
                }
            </wxs>
        </van-card>
    </view>

