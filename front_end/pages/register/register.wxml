<!-- pages/register/register.wxml -->
<view class="container">
    <view class="background"></view>
    <van-cell-group class="register_info">
        <van-field model:value="{{ username }}" label="用户名" placeholder="请输入用户名" border="{{ false }}" required />
        <van-field model:value="{{ email }}" type="email" label="邮箱" placeholder="请输入邮箱" required border="{{ false }}" />
        <van-field model:value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}" />
        <van-field model:value="{{ confirm_password }}" type="password" label="确认密码" placeholder="请确认密码" required border="{{ false }}" />
    </van-cell-group>
    <van-button color="#cc99ff" round size="large" class="register_button" bind:click="register">注册</van-button>
</view>
<tabbar current_page="register" is_login="{{false}}" />
<van-notify id="van-notify" />